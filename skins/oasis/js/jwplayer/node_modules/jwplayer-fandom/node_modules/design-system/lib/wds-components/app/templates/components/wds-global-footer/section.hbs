{{#if model.header.title}}
	<h3 class="wds-global-footer__section-header">{{model.header.title.key}}</h3>
{{/if}}

{{#if model.description}}
	<span class="wds-global-footer__section-description">{{model.description.key}}</span>
{{/if}}

<ul class="wds-global-footer__links-list">
	{{#each model.links as |link|}}
		<li class="wds-global-footer__links-list-item">
			{{!--
				First parameter of some partials called bellow has to be '..' to preserve parent context within.
				Without it context would be loops context i.e. current loop item
			--}}
			{{component (concat 'wds-global-footer/' link.type) model=link}}
		</li>
	{{/each}}
</ul>
